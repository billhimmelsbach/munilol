<%= flash_messages %>
<div class="row form-group">
  <div class="col-xs-10 col-md-10 col-xs-offset-1">
      <div class="panel panel-default">
          <div class="panel-image">
              <img src="<%= @article.image %>" class="img-responsive panel-image-preview" />
          </div>
          <div class="panel-body">
              <h4><%= @article.title %></h4>
              <p><%= @article.content %></p>
          </div>
          <div>
            <% if current_user != nil && current_user.id == @article.user.id %>
            <%= button_to "Edit Article", edit_article_path(@article), method: :get, :class=>"ruby-link btn btn-info btn-primary btn-md" %>
            <%= button_to "Delete Article", destroy_article_path(@article), method: :delete, :class=>"ruby-link btn btn-info btn-danger btn-md" %>
            <% end %>
          </div>
          <div class="panel-footer text-center">
            <a href="#facebook"><span class="fa fa-facebook"></span></a>
            <a href="#twitter"><span class="fa fa-twitter"></span></a>
          </div>
      </div>
  </div>
  <div class="col-xs-1">
    <div class="row">
      <div>
        <% if current_user != nil %>
          V_curr:<%= @comment.vote %>
          <%= form_for @comment, url: update_comment_path  do |f| %>
            <%= f.hidden_field :vote, :value => 1 %>
            <%= f.submit :type => :image, :class => 'img-responsive', :src => "https://d30y9cdsu7xlg0.cloudfront.net/png/390383-200.png"%>
          <% end %>
          <h1 class="vote-total"> V_tot:<%= @vote_total %> </h1>
          <%= form_for @comment, url: update_comment_path  do |f| %>
            <%= f.hidden_field :vote, :value => -1 %>
            <%= f.submit :type => :image, :class => 'img-responsive', :src => "http://i.imgur.com/na8W8zJ.png"%>
          <% end %>
        <% end %>
      </div>
    </div>
</div>
