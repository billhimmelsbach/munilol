<%= flash_messages %>
<div class= "col-xs-12 container-fluid well" style="padding: 30px 150px">
  <div class = "row">
    <div class="alert alert-danger" role"alert">
      <h5 id = "alert_message" style= "color:red; text-align: center;" data-turbolinks-permanent> </h5>
    </div>
  </div>
  <% article_sort_by_vote(@articles).in_groups_of(3, false).each do |article_array|%>
    <div class="image-index row article-row">
      <% article_array.each do |article| %>
        <%= link_to article_path(article) do %>
          <div class="column col-xs-4" style="padding: 3px">
            <div class="card card-inverse image-index" style="background-image: url('<%=article.image %>')">
            </div>
          </div>
        <% end %>
      <% end %>
    </div>
  <% end %>
  <br />
</div>
