<%= flash_messages %>
<h2><strong>Create new article</strong></h2>
<br></br>
<div class = "col-md-4 col-md-offset-4">
  <div class = "NewArticle">
    <%= bootstrap_form_for @article do |f| %>
      <%= f.text_field :title, placeholder: 'Title' %>
      <%= f.text_area :content, placeholder: 'Content' %>
      <%= f.collection_select :muni_id, Muni.order(:name),:id,:name%>
      <%= f.uploadcare_uploader :file, :data => {:images_only => true}%>


      <div class = "CreateButton">
        <%= f.submit "Create new article" %>
      </div>
    <% end %>
    <br></br>
  </div>
</div>
