<h2><strong>Edit article</strong></h2>
<br></br>
<div class = "col-md-4 col-md-offset-4">
  <div class = "NewArticle">
    <%= bootstrap_form_for @article do |f| %>
      <%= f.text_field :title, placeholder: 'Title' %>
      <%= f.text_area :content, placeholder: 'Content' %>
      <%= f.collection_select :muni_id, Muni.order(:name),:id,:name%>
      <%= f.uploadcare_uploader :image, :data => {:images_only => true}%>
      <br>
      <div class = "EditButton">
        <%= f.submit "Edit Article" %>
      </div>
    <% end %>
    <%= button_to "Cancel", :back, method: :get, :class=>"ruby-link btn btn-info btn-default btn-md inline" %>
  </div>
</div>
