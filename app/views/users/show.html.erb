<div class="flash-message-container">
  <%= flash_messages %>
</div>
<br>
<div class="ProfilePhoto">
  <img src="<%= @user.image%>" class="product_img img-responsive img-circle">
</div>
<h2><%=  @user.first_name %>
  <%= @user.last_name %>'s Profile Page
</h2>
<h4>Date Joined:
  <%= @user.created_at.localtime.strftime("%B #{@user.created_at.day.ordinalize}, %Y") %>
</h4>
<div class="text-center">
  <% if current_user != nil && current_user.id == @user.id %>
    <div class="row userbuttons">
      <%= link_to "Edit Profile", edit_user_path(@user), method: :get, :class=>"ruby-link btn btn-info btn-primary btn-md inline" %>
      <button class="ruby-link btn btn-danger inline btn-primary btn-md inline" type="button" data-toggle="collapse" data-target="#collapseExample" aria-expanded="false" aria-controls="collapseExample">Deactivate Account</button>
      <%= link_to logout_path do %>
        <i class="glyphicon glyphicon-log-out"></i>
      <% end %>
    </div>
    <div class="row">
      <div class="collapse" id="collapseExample">
        <div class="well col-xs-4 col-xs-offset-4">
          <h5 class="inline">
            Are you sure you want to deactivate your account?
          </h5>
          <button class="ruby-link btn-danger btn-primary btn-sm inline">
            <%= link_to "Deactivate", destroy_user_path(@user), method: :delete, :class=>"ruby-link"%>
          </button>
          <button class="btn-success btn-primary btn-sm inline" data-toggle="collapse" data-target="#collapseExample" aria-expanded="false" aria-controls="collapseExample">
            Cancel
          </button>
        </div>
      </div>
    </div>
  <% end %>
  <div class="index-container col-xs-12 container-fluid well">
    <% if @user.articles.distinct.count < 1 || nil %>
      <p>
        Are you telling me you haven't seen anything funny on the Muni yet?
      </p>
      <p>
        <%= link_to "Click here", new_article_path %>
        to share now!
      </p>
    <% end %>
    <% article_sort_by_vote(@user.articles).each do |article| %>
      <%= link_to article_path(article) do %>
        <div class="column col-xs-12 col-s-6 col-md-6 col-lg-4" style="padding: 3px">
          <div class="card card-inverse image-index" style="background-image: url('<%=article.image %>')"></div>
        </div>
      <% end %>
    <% end %>
    <br/>
  </div>
</div>
