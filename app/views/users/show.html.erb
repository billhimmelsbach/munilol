<%= flash_messages %>
<div class="col-xs-4 col-xs-offset-1">
  <div class="column">
    <div class="col-xs-4">
      <div class="row">
        <img src="<%= @user.image%>" class="product_img img-responsive img-circle">
      </div>
    <br>
    <div class="row user-info">
      <h3><%=  @user.first_name %> <%= @user.last_name %> </h3>
      <h4>Date Joined: <%= @user.created_at.localtime.strftime("%B #{@user.created_at.day.ordinalize}, %Y") %> </h4>
      <br>
      <div>
        <% if current_user != nil && current_user.id == @user.id %>
          <%= button_to "Edit Profile", edit_user_path(@user), method: :get, :class=>"ruby-link btn btn-info btn-primary btn-md" %>
          <%= button_to "Delete Profile", destroy_user_path(@user), method: :delete, :class=>"ruby-link btn btn-info btn-danger btn-md" %>
        <% end %>
      </div>
    </div>
    </div>
  </div>
</div>
<div class="col-xs-6">
  <%  @articles.each do |article| %>
    <div class="panel panel-default">
      <div class="panel-body">
        <%= image_tag(article.image, height: '250px', width: '400px') %>
        <% if current_user != nil && current_user.id == @user.id %>
          <div class="pull-right">
            <div class = "button-row">
              <%= button_to "Edit Article", edit_article_path(article), method: :get, :class=>"ruby-link btn btn-info btn-primary btn-md" %>
              <%= button_to "Delete Article", destroy_article_path(article), method: :delete, :class=>"ruby-link btn btn-info btn-danger btn-md" %>
            </div>
          </div>
          <div class = "row">
            <div class="collapse" id="collapseExample">
              <div class="well">
                <h3 class="inline"> Are you sure you want to delete this? </h3>
                <div class="col-xs-3">
                </div>
                <div class= "col-xs-6">
                  <br>
                  <%= button_to "Delete Article", destroy_article_path(article), method: :delete, :class=>"ruby-link btn btn-info btn-danger btn-md" %>
                  <button class = "btn-success btn-primary btn-lg inline" data-toggle="collapse" data-target="#collapseExample" aria-expanded="false" aria-controls="collapseExample">
                    Cancel
                  </button>
                </div>
              </div>
            </div>
          </div>
        <% end %>
      </div>
    </div>
  <% end %>
</div>
