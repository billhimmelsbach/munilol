<div class="container">
  <h2><%=  @user.first_name %> <%= @user.last_name %>'s Profile Page</h2>
  <div class="col-sm-4 userprofile">
    <div class="thumbnail"><br>
      <div class="overlay"></div>
      <img class="img-responsive" src=" <%= @user.image %> ">
      <h2><%=  @user.first_name %> <%= @user.last_name %> </h2>
      <h4> Date Joined: <%= @user.created_at.localtime.strftime("%B #{@user.created_at.day.ordinalize}, %Y") %> </h4><br>
      <% if current_user != nil && current_user.id == @user.id %>
      <%= link_to "Edit Profile", edit_user_path(@user), method: :get, :class=>"ruby-link btn btn-info btn-primary btn-md inline" %>
      <button class="ruby-link btn btn-danger inline btn-primary btn-md inline" type="button" data-toggle="collapse" data-target="#collapseExample" aria-expanded="false" aria-controls="collapseExample">Deactivate Account</button>
      <div class="collapse" id="collapseExample">
        <div class="well col-xs-12">
          <h5 class="inline"> Are you sure you want to deactivate your account? </h5>
          <button class="ruby-link btn-danger btn-primary btn-sm inline">
            <%= link_to "Deactivate", destroy_user_path(@user), method: :delete, :class=>"ruby-link"%>
          </button>
          <button class = "btn-success btn-primary btn-sm inline" data-toggle="collapse" data-target="#collapseExample" aria-expanded="false" aria-controls="collapseExample">
            Cancel
          </button>
          <% end %>
          <br>
        </div>
      </div>
    </div>
  </div>
  <%  @articles.each do |article| %>
  <div class="row">
    <div class="col-sm-4 userprofile">
      <div class="thumbnail">
        <div class="overlay"></div>
        <img class="img-responsive" src=" <%= article.image %> ">
      </div>
      <p>
        <strong><%= link_to article.title, article_path(article), method: :get %></strong><br>
        <p><%= link_to article.muni.name, muni_path(article.muni), method: :get %></p>
        <em><%= article.content %></em><br>
      </p>
      <% if current_user != nil && current_user.id == @user.id %>
      <%= link_to "Edit Article", edit_article_path, method: :get, :class=>"ruby-link btn btn-info btn-primary btn-md inline" %>
      <button class="ruby-link btn btn-danger inline btn-primary btn-md inline" type="button" data-toggle="collapse" data-target="#deletearticle<%= article.id %>" aria-expanded="false" aria-controls="collapseExample">Delete Article</button><br>
      <div class = "row">
        <div class="collapse" id="deletearticle<%= article.id %>"><br>
          <div class="well col-xs-9 col-xs-offset-3">
            <h5 class="inline"> Are you sure you want to delete your article? </h5>
            <button class="ruby-link btn-danger btn-primary btn-sm inline">
              <%= link_to "Delete Article", destroy_article_path(article), method: :delete, :class=>"ruby-link"%>
            </button>
            <button class = "btn-success btn-primary btn-sm inline" data-toggle="collapse" data-target="#deletearticle<%= article.id %>" aria-expanded="false" aria-controls="collapseExample">
              Cancel
            </button>
            <% end %>
          </div>
        </div>
      </div>
    </div>
    <% end %>
  </div>
</div>
