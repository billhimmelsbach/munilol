<!DOCTYPE html>
<html>
  <head>
    <title>Munilol</title>
    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
    <%= csrf_meta_tags %>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/js/bootstrap.min.js"></script>
    <link href="https://cdnjs.cloudflare.com/ajax/libs/select2/4.0.3/css/select2.min.css" rel="stylesheet" />
    <script src="https://cdnjs.cloudflare.com/ajax/libs/select2/4.0.3/js/select2.min.js"></script>
    <%= include_uploadcare_widget_from_cdn version: "2.9.0", min: true %>
    <script>
      UPLOADCARE_LOCALE = "en";
      UPLOADCARE_TABS = "file url facebook gdrive dropbox instagram evernote flickr skydrive";
      UPLOADCARE_PUBLIC_KEY = "e6aad8d63e7e221b9e3f";
    </script>
  </head>
  <body>
    <header>
      <nav class="navbar navbar-default navbar-fixed-top">
        <div class="col-xs-12 navbar-header">
          <div class="col-xs-4">
            <div class="col-xs-6">
              <a href="/" class="navbar-brand"><img class = "img-responsive" src="https://i.imgur.com/vNJfnFE.png"></a>
            </div>
          </div>
          <div class="navbar-header col-xs-4" style="vertical-align: middle; margin-top: 12px;">
            <select class="js-example-basic-single" style="width: 40%;">
              <% @munis.each do |muni| %>
                <option></option>
                <option value="<%= muni_path(muni.id) %>"><%= muni.name %></option>
              <% end %>
            </select>
            <script>
              function redirect(goto){
                if (goto !== '') {
                    window.location = goto;
                }
              }
              $("select").select2({
                placeholder: "See your Muni Route",
              });
              $("select").change(function() {
                var goto = this.value;
                console.log(goto);
                redirect(goto);
              });
            </script>
          </div>
          <div class="col-xs-4">
            <ul class="nav navbar-nav v-align pull-right">
              <li>
                <% if current_user %>
                  <%= link_to "New Article", new_article_path, :class => "btn blue-grey lighten-3", method: :get %>
                <% else %>
                  <%= link_to "New Article", new_session_path, :class => "btn blue-grey lighten-3", method: :get %>
                <% end %>
              </li>
              <% if current_user %>
                <li><%= link_to current_user.first_name + "\'s Profile", user_path(current_user)%> </li>
                <li><%= link_to "Log Out", logout_path %></li>
              <% else %>
                <li><%= link_to "Sign up", new_user_path %></li>
                <li><%= link_to "Log In", new_session_path %></li>
              <% end %>
            </ul>
          </div>
        </div>
      </nav>
    </header>
    <main>
      <div class ="row">
        <div class = "col-xs-12">
          <%= yield %>
        </div>
      </div>
    </main>
    <footer>
      <p>Learn more about the <%= link_to "team!", about_path %></p>
    </footer>
  </body>
</html>
